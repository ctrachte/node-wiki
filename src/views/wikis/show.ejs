<!DOCTYPE html>
<html>
  <head>
    <% include ../static/partials/head.ejs %>
  </head>
  <body>
    <% include ../static/partials/navbar.ejs %>

    <main class="container">
      <% include ../static/partials/messages.ejs %>

      <div class="card center" style="width: 100%; Margin:1.5rem;">
        <div class="card-body">
          <h5 class="card-title"><%= wiki.title %></h5>
          <p class="card-text"><%= wiki.body %></p>
          <% if(currentUser && (currentUser.isAdmin() || currentUser.id===wiki.userId)) { %>
          <a href="/wikis/<%= wiki.id %>/edit" class="btn btn-warning">Edit</a>
          <form style="display:initial" action="/wikis/<%= wiki.id %>/destroy" method="post">
            <button type="submit" class="btn btn-danger">Delete</button>
          </form>
          <% } %>
        </div>
      </div>

    </main>

    <% include ../static/partials/baseScripts.ejs %>

  </body>
</html>
