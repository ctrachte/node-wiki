
 <!DOCTYPE html>
 <html lang="en">
   <head>
     <% include ./partials/head.ejs %>
   </head>
   <body>
     <% include ./partials/navbar.ejs %>
     <header class="jumbotron my-4 text-center">
       <% include ../static/partials/messages.ejs %>

       <h1 class="display-3">Join Node Wiki Free!</h1>
       <p class="lead">Create and edit basic wikis.</p>
     </header>
     <h2>Sign up</h2>
      <div class="row">
        <div class="col-md-8">
          <form method="POST" action="/user/signup">
            <div class="form-group">
              <label>Name:</label>
              <input type="text" name="name" placeholder="Enter Name" class="form-control"/>
            </div>
            <div class="form-group">
              <label>Email:</label>
              <input type="email" name="email" placeholder="Enter Email" class="form-control"/>
            </div>
            <div class="form-group">
              <label>Password:</label>
              <input type="password" name="password" placeholder="Enter Password" class="form-control"/>
            </div>
            <div class="form-group">
              <label>Password:</label>
              <input type="password" name="password_conf" placeholder="Enter Password confirmation" class="form-control"/>
            </div><br/>
            <input type="submit" value="Sign Up" class="btn btn-primary"/>
          </form>
        </div>
      </div>
     <% include ./partials/baseScripts.ejs %>
   </body>
 </html>
